<script>
    const date = document.getElementById('date')
    const getCurrentDay = () => {
        var weekday = [
            "Sun",
            "Mon",
            "Tue",
            "Wed",
            "Thur",
            "Fri",
            "Sat",
        ];
        let currentday = new Date();
        return (weekday[currentday.getDay()]);

    };

    const getCurrendate = () => {
        let months = [
            "Jan",
            "Feb",
            "Mar",
            "Apr",
            "May",
            "Jun",
            "Jul",
            "Aug",
            "Sep",
            "Oct",
            "Nov",
            "Dec",
        ];
        var now = new Date();
        var date = now.getDate();
        var month = months[now.getMonth()];
        var hours = now.getHours();
        var min = now.getMinutes();
        let periods = "AM";
        if (hours > 11) {
            periods = "PM"
            if (hours > 12) {
                hours -= 12;
            }
        }

        if (min < 10) {
            "0" + min
        }
        return (`${month} | ${date} | ${hours}:${min} ${periods}`);

    };

    date.innerHTML = `${getCurrentDay()} | ${getCurrendate()}`
</script>
